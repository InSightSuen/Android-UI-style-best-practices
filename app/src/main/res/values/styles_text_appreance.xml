<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题文字样式-->
    <style name="TextAppearance.Title" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorTitle</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <!--副标题文字样式-->
    <style name="TextAppearance.Subtitle" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorSubtitle</item>
        <item name="android:textSize">@dimen/textSizeSubtitle</item>
    </style>

    <!--一级正文文字样式-->
    <style name="TextAppearance.Body1" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorBody1</item>
        <item name="android:textSize">@dimen/textSizeBody1</item>
    </style>

    <!--二级正文文字样式-->
    <style name="TextAppearance.Body2" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorBody2</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
    </style>

    <!--标签文字样式-->
    <style name="TextAppearance.Label" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorLabel</item>
        <item name="android:textSize">@dimen/textSizeLabel</item>
    </style>

    <!--按钮文字样式-->
    <style name="TextAppearance.Button" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorButton</item>
        <item name="android:textSize">@dimen/textSizeButton</item>
    </style>

    <!--无边框按钮文字样式-->
    <style name="TextAppearance.Button.Borderless" parent="BaseTextAppearance">
        <item name="android:textColor">@color/textColorButtonPrimary</item>
    </style>

</resources>