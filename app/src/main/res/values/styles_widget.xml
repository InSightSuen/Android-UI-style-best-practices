<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===================== -->
    <!-- TextView Widget Style -->
    <!-- ===================== -->
    <style name="BaseTextView" parent="android:Widget.TextView">

    </style>

    <style name="BaseTextView.Main">
        <item name="android:paddingLeft">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingTextVertical</item>
        <item name="android:paddingBottom">@dimen/paddingTextVertical</item>

        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="BaseTextView.Caption">
        <item name="android:paddingLeft">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingTextVertical</item>
        <item name="android:paddingBottom">@dimen/paddingTextVertical</item>
    </style>

    <style name="BaseTextView.Prompt">
        <item name="android:paddingLeft">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingTextHorizontal</item>
        <item name="android:paddingTop">@dimen/paddingTextVertical</item>
        <item name="android:paddingBottom">@dimen/paddingTextVertical</item>
        <item name="android:textAppearance">@style/BaseTextAppearance.Label</item>
    </style>

    <!--默认样式-->
    <style name="TextView.Default" parent="BaseTextView">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <!--标题样式-->
    <style name="TextView.Title" parent="BaseTextView.Caption">
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
    </style>

    <!--副标题样式-->
    <style name="TextView.Subtitle" parent="BaseTextView.Caption">
        <item name="android:textAppearance">@style/TextAppearance.Subtitle</item>
    </style>

    <!--一级正文样式-->
    <style name="TextView.Body1" parent="BaseTextView.Main">
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
    </style>

    <!--二级正文样式-->
    <style name="TextView.Body2" parent="BaseTextView.Main">
        <item name="android:textAppearance">@style/BaseTextAppearance.Body2</item>
    </style>

    <!--标签样式-->
    <style name="TextView.Label" parent="BaseTextView.Prompt"/>

    <!--标签样式-->
    <style name="TextView.Label.Inverse" parent="BaseTextView.Prompt">
        <item name="android:textColor">?android:textColorTertiaryInverse</item>
    </style>

    <!-- =================== -->
    <!-- Button Widget Style -->
    <!-- =================== -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">?android:textAppearanceButton</item>
    </style>

    <!--默认按钮样式-->
    <style name="Button.Default"/>

    <!--无边按钮样式-->
    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.Button.Borderless</item>
    </style>

</resources>